<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserProfileActivity"
    android:background="@color/black"
    android:gravity="center">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/menu_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_profile_image"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"/>


            <EditText
                android:id="@+id/input_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_border"
                android:hint="@string/user_profile_full_name"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColorHint="@color/primary_green" />

            <EditText
                android:id="@+id/input_hometown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_border"
                android:hint="@string/user_profile_hometown"
                android:inputType="text"
                android:padding="16dp"
                android:textColorHint="@color/primary_green" />

            <EditText
                android:id="@+id/input_college"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_border"
                android:hint="@string/user_profile_college"
                android:inputType="text"
                android:padding="16dp"
                android:textColorHint="@color/primary_green" />

            <EditText
                android:id="@+id/input_graduate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_border"
                android:hint="@string/user_profile_graduate"
                android:inputType="text"
                android:padding="16dp"
                android:textColorHint="@color/primary_green" />




            <Button android:id="@+id/btn_user_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_profile_save"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/round_bg"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>